@model StudentInfoManagementSystem.Models.Student

@{
    ViewBag.Title = "Details";
}

<div class="container mt-5">
    <h2 class="mb-4">Student Details</h2>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl>
                        <dt class="text-muted">Student Name:</dt>
                        <dd>@Html.DisplayFor(model => model.StudentName)</dd>

                        <dt class="text-muted">Father's Name:</dt>
                        <dd>@Html.DisplayFor(model => model.FatherName)</dd>

                        <dt class="text-muted">Mother's Name:</dt>
                        <dd>@Html.DisplayFor(model => model.MotherName)</dd>

                        <dt class="text-muted">Age:</dt>
                        <dd>@Html.DisplayFor(model => model.Age)</dd>

                        <dt class="text-muted">Home Address:</dt>
                        <dd>@Html.DisplayFor(model => model.HomeAddress)</dd>

                        <dt class="text-muted">Registration Date:</dt>
                        <dd>@Html.DisplayFor(model => model.RegistrationDate)</dd>
                    </dl>
                </div>

                <div class="col-md-6 text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfileImage))
                    {
                        <img src="@Url.Content(Model.ProfileImage)" alt="Profile Image" class="img-thumbnail" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Edit", new { id = Model.StudentId })" class="btn btn-primary">Edit</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
